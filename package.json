{
  "name": "at-mentoring-programm",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "npm run rmdir -- ./logs ./reports ./node_modules ./test-results package-lock.json",
    "dep_install": "npm i && npm audit fix --force",
    "ui:local": "cross-env env_var=local npx playwright test",
    "ui:remote": "cross-env env_var=remote npx playwright test",
    "ddt:remote": "cross-env env_var=remote npx playwright test --grep @4",
    "two-users:remote": "cross-env env_var=remote npx playwright test --grep @3",
    "api:local": "cross-env env_var=local mocha",
    "api:remote": "cross-env env_var=remote mocha",
    "ui-jest:local": "cross-env env_var=local jest ./tests/jest/",
    "ui-jest:remote": "cross-env env_var=remote jest ./tests/jest/",
    "cucumber:local": "cross-env env_var=local cucumber-js test",
    "cucumber:remote": "cross-env env_var=remote cucumber-js test",
    "two-users:cuc-remote": "cross-env env_var=remote OPENSSL_CONF=./openssl.cnf NODE_TLS_REJECT_UNAUTHORIZED='0' cucumber-js test --tags @two_users",
    "sonar": "sonar-scanner",
    "allure-generate": "allure generate ./reports/allure-generate -o ./reports/allure-report --clean && allure open ./reports/allure-report",
    "allure-generate-wdio": "allure generate ./reports/wdio/allure-results -o ./reports/wdio/allure-report --clean && allure open ./reports/wdio/allure-report",
    "rmdir": "node -e \"var fs = require('fs');process.argv.slice(1).map((fpath) =>{if (fs.existsSync(fpath)) {fs.rmSync(fpath, { recursive: true })} else console.log('Dist not found');});process.exit(0);\"",
    "wdio": "wdio run ./wdio.conf.ts"
  },
  "keywords": [],
  "author": "Yevhen Sydorenko",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^9.1.2",
    "@playwright/test": "^1.34.3",
    "@reportportal/agent-js-playwright": "^5.1.2",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@wdio/allure-reporter": "^8.11.0",
    "@wdio/cli": "^8.11.2",
    "@wdio/local-runner": "^8.11.2",
    "@wdio/mocha-framework": "^8.11.0",
    "@wdio/spec-reporter": "^8.11.2",
    "allure-playwright": "^2.1.0",
    "chai": "^4.3.7",
    "chromedriver": "^114.0.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-junit-reporter": "^1.1.0",
    "jest-playwright-preset": "^3.0.1",
    "json-query": "^2.2.2",
    "lint-staged": "^13.2.1",
    "mocha": "^10.2.0",
    "monocart-reporter": "^1.6.12",
    "pactum": "^3.3.3",
    "playwright": "^1.32.3",
    "prettier": "2.8.7",
    "sonarqube-scanner": "^3.0.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "wdio-chromedriver-service": "^8.1.1",
    "winston": "^3.8.2"
  },
  "dependencies": {
    "@delta-reporter/wdio-delta-reporter-service": "^1.1.10"
  }
}
